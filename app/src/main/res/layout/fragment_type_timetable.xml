<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorFullEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_slider" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/switching_button"
            android:padding="5dp"
            android:textColor="@drawable/switch_color"
            android:textAllCaps="false"
            android:textOff="Рассписание зачетов и экзаменов"
            android:textOn="Рассписание зачетов и экзаменов"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/switching_button"
            android:padding="5dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@drawable/switch_color"
            android:textOff="Рассписание факультативов"
            android:textOn="Рассписание факультативов"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/switching_button"
            android:checked="true"
            android:padding="5dp"
            android:textAllCaps="false"
            android:textColor="@drawable/switch_color"
            android:textOff="Рассписание на сегодня"
            android:textOn="Рассписание на сегодня"
            android:textSize="16dp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
