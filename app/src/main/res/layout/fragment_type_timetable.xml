<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorFullEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_slider" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_exams"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_outline"
            android:stateListAnimator="@null"
            android:padding="5dp"
            android:textColor="@drawable/switch_color"
            android:textAllCaps="false"
            android:text="Зачеты и экзамены"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_elective"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_outline"
            android:padding="5dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@drawable/switch_color"
            android:text="Факультативы"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:checked="true"
            android:background="@drawable/btn_outline"
            android:padding="5dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@color/colorOrange"
            android:text="Другая группа"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_tutor"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_outline"
            android:padding="5dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@drawable/switch_color"
            android:text="Преподаватель"
            android:textSize="16dp" />

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
